 @model CourseViewModel
 <hr>
    <div class="row course">
        <div class="col-md-1"> 
            <img src="@Model.ImgPath" width="52" height="52">
        </div>
        <div class="col-md-5">
            <h2>@Model.Titolo</h2>
            <author>@Model.Autore</author>
        </div>
    <div class="col-md-2 rating" title="@Model.Rating">
      

            <rating value="@Model.Rating"></rating> <!--tag creato da noi -->
    </div>
    <div class="col-md-2 price">

        <price current-price="@Model.PrezzoScontato" full-price="@Model.PrezzoFull"></price>
      
    </div>
    <div class="col-md-2 d-flex align-items-center">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@Model.Id">Dettaglio</a>  
        </div>
    </div>